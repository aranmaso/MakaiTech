			<StuffPower_Armor_Electric MayRequire="ceteam.combatextended">4.5</StuffPower_Armor_Electric>
			<StuffPower_Insulation_Cold>50</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>50</StuffPower_Insulation_Heat>
			<SharpDamageMultiplier>2</SharpDamageMultiplier>
			<BluntDamageMultiplier>2</BluntDamageMultiplier>
			<CelestialDamageMultiplier>2</CelestialDamageMultiplier>
		</statBases>
